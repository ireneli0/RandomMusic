<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
    
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>ca.utoronto.ece.servlet.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    
   <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ca.utoronto.ece.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>ca.utoronto.ece.server.GreetingServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/randommusic/greet</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>LoginCheckOnLoadServlet</servlet-name>
    <servlet-class>ca.utoronto.ece.servlet.LoginCheckOnLoadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginCheckOnLoadServlet</servlet-name>
    <url-pattern>/LoginCheckOnLoadServlet</url-pattern>
  </servlet-mapping>
  
      <servlet>
    <servlet-name>Clock3</servlet-name>
    <servlet-class>ca.utoronto.ece.servlet.Clock3</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Clock3</servlet-name>
    <url-pattern>/clock3</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>RandomMusic.jsp</welcome-file>
  </welcome-file-list>

</web-app>
